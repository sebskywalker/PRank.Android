<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_name"
            android:inputType="textPersonName"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- Apodo -->
        <EditText
            android:id="@+id/etApodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_alias"
            android:inputType="text"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- Descripción -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_description"
            android:inputType="textMultiLine"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- Fecha de Nacimiento -->
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_birthdate"
            android:inputType="date"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- Ocupación -->
        <EditText
            android:id="@+id/etOcupacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_occupation"
            android:inputType="text"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- PR Bench Press -->
        <EditText
            android:id="@+id/etPRBenchPress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_bench_press_pr"
            android:inputType="number"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- PR Squat -->
        <EditText
            android:id="@+id/etPRSquat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_squat_pr"
            android:inputType="number"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- PR Deadlift -->
        <EditText
            android:id="@+id/etPRDeadlift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legend_deadlift_pr"
            android:inputType="number"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:minHeight="56dp"
            android:importantForAutofill="yes" />

        <!-- Vista previa de la imagen -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/preview_image" />

        <!-- Seleccionar Foto -->
        <Button
            android:id="@+id/btnSeleccionarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_seleccionar_foto"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gear_red"
            android:textColor="@android:color/white" />

        <!-- Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_guardar"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gear_red"
            android:textColor="@android:color/white"
            android:minHeight="48dp" />

        <!-- Botón Home -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_home"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:minHeight="48dp" />
    </LinearLayout>
</ScrollView>